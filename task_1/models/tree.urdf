<?xml version="1.0"?>
<robot name="simple_tree">
  <link name="trunk">
    <visual>
      <geometry>
        <cylinder radius="0.1" length="1.0"/> <!-- Trunk -->
      </geometry>
      <material name="brown">
        <color rgba="0.65 0.16 0.16 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.1" length="1.0/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.02" ixy="0.0" ixz="0.0" iyy="0.02" iyz="0.0" izz="0.02"/>
    </inertial>
  </link>

  <link name="leaves">
    <visual>
      <geometry>
        <sphere radius="0.3"/> <!-- Leaves -->
      </geometry>
      <material name="green">
        <color rgba="0.0 0.5 0.0 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.3"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <joint name="trunk_to_leaves" type="fixed">
    <parent link="trunk"/>
    <child link="leaves"/>
    <origin xyz="0 0 1.0" rpy="0 0 0"/> <!-- Position leaves above trunk -->
  </joint>
</robot>
